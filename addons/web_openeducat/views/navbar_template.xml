<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="website.layout_logo_show" inherit_id="website.layout"
        customize_show="True" name="Show Logo">
        <xpath expr="//header//a[@class='navbar-brand']" position="replace">

        </xpath>
    </template>

    <template id="navbar_mega" inherit_id="website.layout">

        <xpath expr="//div[@class='navbar-header']" position="inside">
            <a href="/">
                <img src="/web_openeducat/static/src/img/logo.png"
                    class="img img-responsive" alt="Logo of OpenEduCat"
                    title="OpenEduCat" style="height: 85px !important;" />
            </a>
        </xpath>


        <xpath expr="//div[@id='wrapwrap']/header/div[1]"
            position="before">
            <div class="oe_structure">
                <div id="custom-pre-header">
                    <div class="container">
                        <nav class="header-nav-top pull-right">

                            <div id="social">
                                <a href="http://localhost:8069/web#"
                                     style="color: #FFFFFF"><strong>--> Ir a la plataforma   </strong>
                                </a>
                                <a href="https://www.facebook.com/UESoficial.SV/"
                                    target="_blank">
                                    <i class="fa fa-facebook fa-1x img-circle"></i>
                                </a>
                                <a href="https://twitter.com/UESoficial"
                                    target="_blank">
                                    <i class="fa fa-twitter fa-1x img-circle"></i>
                                </a>
                            </div>
                        </nav>
                        <div id="company_details" class="text-white">
                            <i class="fa fa-phone pr8" />
                            <span class="company-info pr8 text-white">+(503)2480-0800</span>
                            <i class="fa fa-envelope pr8" />
                            <span class="company-info text-white">plataformatrabajogrado@gmail.com</span>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
